<%- include('partials/_headerMenuEmpleado') %>
    <div class="imagenFondo contenedorModuloEmpleado">
        <div class="contenedorMenuSlider">
            <%- include('partials/_slideBarMenu') %>
        </div>
        <div class="contenedorContenidoModuloEmpleado">
            <div class="encabezadoControl">
                <h3>
                    Control Catalogo
                </h3>
                <div class="flexRow" style="align-items: baseline;">
                    <p style="margin-right: 8px;">Generar reporte:</p>
                    <div class="flexColum">
                        <select name="reporte" id="reporte">
                            <option value="0">Seleccion</option>
                        </select>
                        <button class="botonReporte botonVerde">
                            Generar
                        </button>
                    </div>
                </div>
            </div>
            <div class="separadorTablasControles">
                <p></p>
                <p style="margin-left: 50%" ;>Ingresar</p>
            </div>
            <div class="contenedorCrud">
                <div class="contenedorTarjetasControl">
                <% if (data) { %>
                    <% for( let index = 0; index < data.length; index++ ) { %>
                        <% if (data[index].estadoCatalogo == 'Visible') { %>
                            <div class="tarjetaCRUD visible tarjetaControlCatalogo">
                        <% } %>
                        <% if (data[index].estadoCatalogo == 'Oculto') { %>
                            <div class="tarjetaCRUD oculto tarjetaControlCatalogo">
                        <% } %>
                            <img src= <%= data[index].imagenProducto %>  alt="">
                            <div class="TarjetaCRUDContenido">
                                <div class="inputCRUD">
                                    <p>Id:</p>
                                    <p class="idProducto"><%= data[index].idProducto %></p>
                                </div>
                                <div class="inputCRUD">
                                    <p>Nombre:</p>
                                    <p class="nombreProducto"><%= data[index].nombreProducto %></p>
                                </div>
                                <div class="inputCRUD">
                                    <p>Cantidad:</p>
                                    <p class="cantidadProducto"> <%= data[index].cantProducto %> </p>
                                </div>
                                <div class="inputCRUD">
                                    <p>Estado:</p>
                                    <p> <%= data[index].estadoCatalogo %>  </p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
                </div>
                <div class="contenedorPanelBotones">
                    <form action="" method="post" id="formularioCatalogo">
                    <div class="inputCRUD">
                        <label for="idProducto">Id:</label>
                        <input type="text" name="idProducto" id="idProducto" style="background-color: rgb(204, 204, 204);">
                    </div>
                    <div class="inputCRUD">
                        <label for="nombreProducto">Nombre</label>
                        <input type="text" name="nombreProducto" id="nombreProducto" style="background-color: rgb(204, 204, 204);">
                    </div>
                    <div class="inputCRUD">
                        <label for="cantProducto">Cantidad</label>
                        <input type="text" name="cantProducto" id="cantProducto" style="background-color: rgb(204, 204, 204);">
                    </div>
                    <div class="contenedorBotonesCRUD">
                        <div class="botonesCRUD">
                            <div class="flexColum">
                                <p style="text-align: center; margin-top: 1%; margin-bottom: 1%;">Cambiar Estado</p>
                                <div class="flexRow">
                                    <button class="botonCRUDCorto botonNuevo" id="btnVisible">
                                    Visible
                                    </button>
                                    <button class="botonCRUDCorto botonEliminar" id="btnOculto">
                                    Oculto
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="mensajeError">Mensaje de Error</p>
                </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/scripts/controlCatalogo.js"></script>
    <%- include('partials/_footer') %>